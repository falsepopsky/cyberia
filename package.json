{
  "name": "cyberia",
  "private": true,
  "type": "module",
  "license": "GPL-3.0",
  "workspaces": {
    "packages": [
      "packages/db",
      "packages/eslint-config-cyberia",
      "apps/*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --cache -w .",
    "clean": "turbo run clean",
    "generate": "turbo run generate",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "eslint-config-cyberia": "workspace:^",
    "prettier": "^3.0.2",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
